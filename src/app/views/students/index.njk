{% extends "layout.njk" %}

{% block content %}
        <div class="div-content tb">
            <div class="header">
            <a href="/students/create">Novo</a>
            <form action="/students" method="GET">
              <input type="text" name="filter" value="{{filter}}">
              <button type="submit">Filtrar</button>
            </form>
          </div>
            <table>
              <thead>
                <tr>
                  <th>Estudante</th>
                  <th>Email</th>
                  <th>Ação</th>
                </tr>
              </thead>
              <tbody>
               {% for student in students %}
                <tr>
                  <td><span style="background-image: url({{student.avatar_url}})"></span>
                  {{student.name}}
                  </td>

                  <td>
                     {{student.email}}
                  </td>
                 
                  <td><a  href="/students/{{student.id}}">ver</a></td>
                </tr>
                {% endfor %}
              </tbody>
            </table>

            <div class="pagination"
              data-pages={{pagination.pages}}
              data-total={{pagination.total}}
              data-filter={{filter}}
            > </div>
        </div>
{% endblock %}