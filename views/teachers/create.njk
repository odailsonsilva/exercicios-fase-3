{% extends "layout.njk" %}

{% block content %}
        <div class="div-content">
            <section class="img-sec" style="background: url('http://source.unsplash.com/collection/517198/500x500') center center / cover no-repeat"></section>
            <form class="content-sec" method="POST" action="/teachers">
                <h2>Novo Professor</h2>
                <div class="item">
                    <Label for="name">Nome</label>
                    <input type="text" name="name" id="name" placeholder="Seu nome">
                </div>

               <div class="item">
                    <Label for="avatar_url">Avatar url</label>
                    <input type="text" name="avatar_url" id="avatar_url"  placeholder="http://">
                    
                </div>

                <div class="item">
                    <Label for="birth">Data de Nascimento</label>
                    <input type="date" name="birth" id="birth">
                    
                </div>

                <div class="item">
                    <Label for="escolaridade">Escolaridade</label>
                       <select name="escolaridade" id="escolaridade">
                            <option value="">--------------------ESCOLHA SUA ESCOLARIDADE----------------</option>
                            <option value="emc">Ensino Médio Completo</option>
                            <option value="esc">Ensino Superior Completo</option>
                            <option value="me">Mestrado</option>
                            <option value="do">Doutorado</option>
                       </select>
                </div>
                
                <div class="item">
                    <div for="birth">Tipo de Aula</div>
                        <label class="radio" for="tipo-aula"><input type="radio" id="tipo-aula" name="tipoaula" value="presencial" >presencial</label>
                        <label class="radio" for="tipo-aula2"><input type="radio" id="tipo-aula2" name="tipoaula" value="presencial">à distancia</label>
                </div>

                <div class="item">
                    <Label for="materias">Materias Lecionadas</label>
                    <textarea name="materias" id="materias" cols="20" rows="6"  placeholder="Digite as materias separadas por vírgula"></textarea>
                </div>
                <button type="submit">SALVAR</button>
            </form>
        </div>
{% endblock %}